{
  "builds": [
    { "src": "api/**/*.[jt]s", "use": "@vercel/node" },
    {
      "src": "frontend-react/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
